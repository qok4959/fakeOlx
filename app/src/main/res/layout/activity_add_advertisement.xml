<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advertisement.AddAdvertisement">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:name="com.example.olx.fragments.FragmentNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="714dp" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="-218dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView12"
                android:layout_width="350dp"
                android:layout_height="58dp"
                android:layout_marginTop="28dp"
                android:text="Add advertisement"
                android:textAlignment="center"
                android:textColor="@color/secondaryColor"
                android:textSize="40dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgViewAddPhoto"
                android:layout_width="450dp"
                android:layout_height="200dp"
                android:layout_marginTop="36dp"
                app:srcCompat="@drawable/photo" />

            <EditText
                android:id="@+id/editTxtAddName"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/fifthColor"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck"

                />

            <EditText
                android:id="@+id/editTxtAddTitle"
                android:layout_width="332dp"
                android:layout_height="45dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/fifthColor"
                android:ems="10"
                android:hint="title   i.e toyota yaris 2008 1.2 75km"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTxtAddDescription"
                android:layout_width="330dp"
                android:layout_height="183dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/fifthColor"
                android:ems="10"
                android:gravity="start"
                android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/editTxtAddPhoneNumber"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/fifthColor"
                android:ems="10"
                android:hint="phone number"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTxtAddDescription"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTxtPrice"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/fifthColor"
                android:ems="10"
                android:hint="price"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTxtAddPhoneNumber"
                tools:ignore="TouchTargetSizeCheck" />


            <Spinner
                android:id="@+id/spinnerCategories"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@+id/editTxtPrice"
                tools:ignore="SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinnerLocation"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCategories"
                tools:ignore="SpeakableTextPresentCheck"
                />


            <Button
                android:id="@+id/btnAddAdvertisement"
                android:layout_width="330dp"
                android:layout_height="65dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="@color/secondaryColor"
                android:text="add"
                android:textColor="@color/fourthColor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerLocation"
               />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>