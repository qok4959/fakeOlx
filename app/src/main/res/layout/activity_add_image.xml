<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advertisement.AddImage">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="285dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:text="Add an image link"
        android:textAlignment="center"
        android:textColor="@color/secondaryColor"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewBackFromAddLinks" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLinks"
        android:layout_width="285dp"
        android:layout_height="100dp"

        android:layout_marginTop="12dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/btnAddLinkTest2"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/secondaryColor"
        android:text="add"
        android:textColor="@color/fourthColor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddLink" />

    <EditText
        android:id="@+id/editTextAddLink"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/fifthColor"
        android:ems="10"
        android:hint="paste img link"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/ImageViewBackFromAddLinks"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowleft"
        app:tint="@color/secondaryColor" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="285dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:text="Added images links"
        android:textAlignment="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddLinkTest2" />

    <!--        app:layout_constraintTop_toBottomOf="@+id/listView"-->
    tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>